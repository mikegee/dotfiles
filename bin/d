#!/usr/bin/env ruby -w

pwd        = Dir.pwd
image_name = File.basename(pwd).downcase

cmd = %W(
  docker run
  --interactive --rm --tty
  --publish-all
  --env RSPEC_FAIL_FAST=true
  --volume #{pwd}:/app
  --volume #{ENV['HOME']}/.ssh:/root/.ssh
  --workdir /app
)

while ARGV.first.to_s.include?('=')
  cmd << '--env'
  cmd << ARGV.shift
end

cmd << image_name
cmd += ARGV

# cmd += %w(sh -c)
# cmd << "'eval $(ssh-agent) ; ssh-add /root/.ssh/id_rsa ; " + ARGV.join(' ') + "'"

puts cmd.join(' ')
exec(*cmd)
