alias minimum_volume='osascript -e"set volume output volume 1"'

# git
alias gcb='git create-branch'
alias add='git add --all'
alias ci='git ci'
alias co='git co'
alias push='git push'
alias gpf='git pf'
alias gcp='git cherry-pick'
alias pull='git pull'
alias rebase='git rebase'
alias glg='git lg'
